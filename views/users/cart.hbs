            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table_desc">
                            <div class="table_page table-responsive">
                                <table>
                                    <!-- Start Cart Table Head -->
                                    <thead>
                                        <tr>
                                            <th class="product_remove">Delete</th>
                                            <th class="product_thumb">Image</th>
                                            <th class="product_name">Product</th>
                                            <th class="product-price">Price</th>
                                            <th class="product_quantity">Quantity</th>
                                            <th class="product_total">Total</th>
                                        </tr>
                                    </thead> <!-- End Cart Table Head -->
                                    <tbody>
                                        <!-- Start Cart Single Item-->
                                        {{#each cart}}
                                        <tr>
                                            <td class="product_remove">
                                                <button class="btn btn-md btn-golden" type="submit"
                                                    onclick="removeProduct('{{this._id}}', '{{this.products.productId}}' )">
                                                    <i class="fa fa-trash-o"></i>
                                                </button>
                                            </td>
                                            <td class="product_thumb"><a href="#"><img
                                                        src="../img/products/{{this.product.coverImage}}" alt=""></a>
                                            </td>
                                            <td class="product_name"><a href="#">{{this.product.productTitle}}</a>
                                            </td>
                                            <td class="product-price">{{this.product.price}}</td>
                                            <td class="product_quantity">
                                                {{#compareStrings this.products.quantity '1'}}
                                                <button class="btn btn-md btn-golden disabled" type="submit"
                                                    onclick="changeQuantity('{{this._id}}', '{{this.products.productId}}' , -1)">-</button>
                                                {{else}}
                                                <button class="btn btn-md btn-golden" type="submit"
                                                    onclick="changeQuantity('{{this._id}}', '{{this.products.productId}}' , -1)">-</button>
                                                {{/compareStrings}}
                                                <input min="1" max="100" value="{{this.products.quantity}}" type="text"
                                                    class="mx-2">
                                                <button class="btn btn-md btn-golden" type="submit"
                                                    onclick="changeQuantity('{{this._id}}','{{this.products.productId}}', 1)">+</button>
                                            </td>
                                            <td class="product_total">{{multiply this.product.price
                                                this.products.quantity}}</td> 
                                        </tr> <!-- End Cart Single Item-->

                                        {{/each}}
                                        <!-- Start Cart Single Item-->

                                    </tbody>
