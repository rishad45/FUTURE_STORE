    <script>
        function changeQuantity(cartId, productId, qty) { 
            $.ajax({
                url: '/changeProductQuantity', 
                data: {
                    cart: cartId,
                    product: productId,
                    count: qty
                },
                method: 'post',
                error: function () {
                    alert("error while loading data");
                }
            })
            $("#cartDiv").load(location.href + " #cartDiv");
        };

        function removeProduct(cartId, productId) {
            $.ajax({
                url: '/removeProduct',
                data: {
                    cart: cartId,
                    product: productId
                },
                method: 'post',
                error: function () {
                    alert("error while loading data");
                }
            })
            location.reload()
            // $("#cartDiv").load(location.href + " #cartDiv");
        }


        function checkCouponCode() {
            let couponCode = $("#couponInput").val()
            console.log(couponCode)
            $.ajax({
                url: '/checkCouponAvailblity',
                method: 'post',
                data: {
                    couponCode: couponCode
                }
            }).then((res) => {
