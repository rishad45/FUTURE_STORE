  <script src="../vendors/fontawesome/all.min.js"></script>
  <script src="../vendors/lodash/lodash.min.js"></script>
  <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
  <script src="../vendors/imagesloaded/imagesloaded.pkgd.js"></script>
  <script src="../vendors/gsap/gsap.js"></script>
  <script src="../vendors/gsap/customEase.js"></script>
  <script src="../vendors/gsap/drawSVGPlugin.js"></script><!-- Global site tag (gtag.js) - Google Analytics-->
  <script async="" src="https://www.googletagmanager.com/gtag/js?id=UA-122907869-1"></script>


  <script>
    $().ready(function () {
      $("#signupForm").validate({
        rules: {
          name: {
            required: true,
            minlength: 2,
            maxlength: 15,
            nameCheck: true

          },
          email: {
            required: true,
            minlength: 10,
            email: true

          },
          password: {
            required: true,
            minlength: 6,
            pwcheck: true
          },
          rePassword: {
            required: true,
            equalTo: "#mainPassword"
          }
        },
        messages: {
          name: {
            required: "this field is required",
            minlength: "this field should have atleast 2",
            maxlength: "atmost 15",
            nameCheck: "name shouldnot contain numbers or special Characters"
          },
          email: {
            required: "this field is required",
            minlength: "this field should have atleast 10",
            email: "enter valid email"
          },
          password: {
            required: "this field is required",
            minlength: "should have atleast 6",
            pwcheck: "password should contain atleast one lowercase and atleast one digit"
          },
          rePassword: {
            required: "this field is required",
            equalTo: "enter same password as above"
          }
        }
      });
      $.validator.addMethod("pwcheck", function (value) {
        return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) // consists of only these
          && /[a-z]/.test(value) // has a lowercase letter
          && /\d/.test(value) // has a digit
      });
      $.validator.addMethod("nameCheck", function (value) {
        return /^[A-Za-z]+$/.test(value)
      })
    })
  </script>

