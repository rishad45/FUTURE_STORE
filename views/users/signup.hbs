<body class="overflow-hidden-x">




  <!-- ===============================================-->
  <!--    Main Content-->
  <!-- ===============================================-->
  <main class="main min-vh-100" id="top">

    <!-- ============================================-->
    <!-- Preloader ==================================-->
    <div class="preloader" id="preloader">
      <div class="loader">
        <div class="line-scale-pulse-out-rapid">
          <div> </div>
          <div></div>
          <div></div>
          <div></div>
          <div> </div>
        </div>
      </div>
    </div><!-- ============================================-->
    <!-- End of Preloader ===========================-->

    <!-- ============================================-->
    <!-- <section> begin ============================-->
    <section class="py-0">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6 px-0">
            <div class="sticky-top vh-lg-100 py-9">
              <div class="bg-holder" style="background-image:url(../assets/img/metaverse.jpg);"
                data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'></div>
              <!--/.bg-holder-->
            </div>
          </div>
          <div class="col-lg-6 py-6">
            <div class="row h-100 align-items-center justify-content-center">
              <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8" data-zanim-xs='{"delay":0.5,"animation":"slide-right"}'
                data-zanim-trigger="scroll">
                <h3 class="display-4 fs-2">Welcome to the Future,<br />freelancers &amp; companies.</h3>
                <h6 class="text-danger mt-3">Specially crafted for the people who care about design.</h6>

                {{!-- <-======================================================-> --}}
                  {{!-- form begins here --}}

                  <form class="mt-5 cmxform" method="post" action="/signup" id="signupForm">
                    <p class="mt-2 text-danger">{{errorMsg}}</p>
                    <div class="row gy-4 align-items-center mb-4">
                      <div class="col-12"><input class="form-control bg-light" type="text" placeholder="UserName"
                          name="name" /></div>
                      <div class="col-12"><input class="form-control bg-light myBox" type="email"
                          placeholder="Enter Email" name="email" /></div>
                      <div class="col-12"><input class="form-control bg-light myBox" type="tel"
                          placeholder="Enter Mobile number" name="mobile" /></div>
                      <div class="col-6"><input class="form-control bg-light" type="password" placeholder="Password"
                          name="password" id="mainPassword" /></div>
                      <div class="col-6"><input class="form-control bg-light" type="password" placeholder="Confirmation"
                          name="rePassword" /></div>
                    </div>
                    <div class="row mb-4 align-items-center">
                      <div class="col-auto d-grid"><input class="btn btn-dark" type="submit" name="submit"
                          value="Continue" /></div>
                      <div class="col-sm">
                        <p class="fs--1 text-700 mb-0 font-sans-serif mt-2 mt-lg-0">By signing up, you agree to the<a
                            class="text-black" href="#!">terms and conditions.</a></p>
                      </div>
                    </div>

                  </form>
                  <p><a href="/login">Already have an Account?</a></p>
              </div>
            </div>
          </div>
        </div>
      </div><!-- end of .container-->
    </section><!-- <section> close ============================-->
