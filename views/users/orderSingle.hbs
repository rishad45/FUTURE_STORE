<script>


    $(document).ready(function () {
        const order = "{{singleOrder.0.products.orderStatus}}"
        if (order == 'created') {
            $("#confirm").addClass('active')
        }
        else if (order == 'placed') {
            $("#confirm").addClass('active')
        }
        else if (order == 'pending') {
            $("#confirm").addClass('active')
        }
        else if (order == 'shipped') {
            $("#confirm").addClass('active')
            $("#shipped").addClass('active')
        }
        else if (order == 'delivered') {
            $("#confirm").addClass('active')
            $("#shipped").addClass('active')
            $("#open").addClass('active')
            $("#delivered").addClass('active')
        } else {

        }
    })




    function cancelOrder(id, order) {
        let data = {}
        let reason = $("#reason option:selected").text()
        console.log(reason)
        data.id = order 
        data.order = id
        data.reason = reason 
        axios.post('/cancelOrder', data).then((res) => {
            location.reload() 
        }) 
    } 
</script>