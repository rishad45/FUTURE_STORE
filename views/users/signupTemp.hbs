<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>


<script src="https://kit.fontawesome.com/00d589803f.js" crossorigin="anonymous"></script>

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="/user/images/banner/metaFind.jpg"
                        class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post" action="/signup" id="signupForm" class="mb-2">
                        <p class="mt-2 text-danger">{{errorMsg}}</p>
                        {{!-- userName --}}
                        <div class="form-outline mb-4">
                            <input type="text" id="form1Example13" class="form-control form-control-lg" name="name" />
                            <label class="form-label" for="form1Example13">User Name</label>
                        </div>
                        {{!-- Email input --}}
                        <div class="form-outline mb-4">
                            <input type="email" id="form1Example13" class="form-control form-control-lg" name="email" />
                            <label class="form-label" for="form1Example13">Email address</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="tel" id="form1Example13" class="form-control form-control-lg" name="mobile" />
                            <label class="form-label" for="form1Example13">Mobile  Number</label>
                        </div>

                        <!-- Password input -->
                        <div class="row">
                            <div class="form-outline mb-4 col-6">
                                <input type="password" id="form1Example23" class="form-control form-control-lg"
                                    id="mainPassword" name="password" />
                                <label class="form-label" for="form1Example23">Password</label>
                            </div>
                            <div class="form-outline mb-4 col-6">
                                <input type="password" id="form1Example23" class="form-control form-control-lg"
                                    name="rePassword" />
                                <label class="form-label" for="form1Example23">Confirm Password</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <a href="#!">Forgot password?</a>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block" name="submit">Get OTP</button>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                        </div>
                        <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                            role="button">
                            <i class="fab fa-google me-2 mr-2"></i>Continue with Google</a>

                    </form>
                    <p class="text-danger mr-2">Already have an Account?<a class="ml-2" href="/login">Log in</a></p>
                </div>
            </div>
        </div>
    </section>

</body>

<script>
    $(document).ready(function () {
        $("#signupForm").validate({
            rules: {
                name: {
                    required: true,
                    minlength: 2,
                    maxlength: 15,
                    nameCheck: true

                },
                email: {
                    required: true,
                    minlength: 10,
                    email: true

                },
                password: {
                    required: true,
                    minlength: 6,
                    pwcheck: true
                },
                rePassword: {
                    required: true,
                    equalTo: "#mainPassword"
                }
            },
            messages: {
                name: {
                    required: "this field is required",
                    minlength: "this field should have atleast 2",
                    maxlength: "atmost 15",
                    nameCheck: "name shouldnot contain numbers or special Characters"
                },
                email: {
                    required: "this field is required",
                    minlength: "this field should have atleast 10",
                    email: "enter valid email"
                },
                password: {
                    required: "this field is required",
                    minlength: "should have atleast 6",
                    pwcheck: "password should contain atleast one lowercase and atleast one digit"
                },
                rePassword: {
                    required: "this field is required",
                    equalTo: "enter same password as above"
                }
            }
        });
        $.validator.addMethod("pwcheck", function (value) {
            return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) // consists of only these
                && /[a-z]/.test(value) // has a lowercase letter
                && /\d/.test(value) // has a digit
        });
        $.validator.addMethod("nameCheck", function (value) {
            return /^[A-Za-z]+$/.test(value)
        })
    })
</script>