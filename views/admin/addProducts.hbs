<body>
  <!-- ===============================================-->
  <!--    Main Content-->
  <!-- ===============================================-->
  <main class="main" id="top">
    <div class="container-fluid px-0" data-layout="container">
      {{>admin-sidenav}}
      {{>admin-vertical-nav}} 
      <div class="content">
        <nav class="mb-2" aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#!">Page 1</a></li>
            <li class="breadcrumb-item"><a href="#!">Page 2</a></li>
            <li class="breadcrumb-item active">Default</li>
          </ol>
        </nav>

        <form class="mb-9 form-container" action="/admin/addProducts" method="post" enctype="multipart/form-data"
          id="fileUploadForm">
          <div class="row g-3 flex-between-center mb-5">
            <div class="col-auto">
              <h2 class="mb-2">Add a product</h2> 
              <h5 class="text-700 fw-semi-bold">Orders placed across your store</h5>
            </div>
            <div class="col-auto"><button class="btn btn-primary mb-2 mb-sm-0" type="submit">Publish product</button>
            </div>
          </div>
          <h4 class="mb-3">Product Title</h4>
          <div class="row g-5">
            <div class="col-12 col-xl-8"><input class="form-control mb-5" type="text" placeholder="Write title here..."
                name="productName" />
              <div class="mb-6">
                <h4 class="mb-3"> Product Description</h4>
                <div class="form-outline">
                  <textarea class="form-control" id="textAreaExample1" rows="4" name="description"></textarea>
                </div>
              </div>
              <h4 class="mb-3">Display images</h4>
              POSTER-IMAGE:<input type="file" name="coverImage" id="image"><br><br><br>
              ALL-IMAGES: <input type="file" name="allImages" id="imageAll" multiple><br>


              <div class="col-12 col-xl-12">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title mb-4">PRICING AND STOCK</h4>
                    <div class="row">
                      <div class="col-12 col-sm-6 col-xl-12">
                        <div class="mb-4 border-dashed-bottom pb-4">
                          <div class="d-flex flex-wrap justify-content-between mb-2">
                            <h5>PRICE</h5>
                          </div><input class="form-control mb-5" type="text" placeholder="Enter the price"
                            name="price" />
                          <h5>STOCK</h5>
                          <input class="form-control mb-5" type="text" placeholder="ENTER THE STOCK" name="stock" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="col-12 col-xl-4">
              <div class="row g-2">
                <div class="col-12 col-xl-12">
                  <div class="card mb-3">
                    <div class="card-body">
                      <h4 class="card-title mb-4">Organize</h4>
                      <div class="row">

                        <div class="col-12 col-sm-6 col-xl-12">
                          <div class="mb-4">
                            <div class="d-flex flex-wrap justify-content-between mb-2">
                              <h5>Category</h5><a class="fw-bold fs--1" href="#!">Add new category</a>
                            </div>

                            <select class="form-select mb-3" aria-label="category" name="category" id="selectCat" onchange="fetchSub(this.value)">
                              {{#each categories}}
                              <option value="{{this.categoryTitle}}" onselect="getSub({{this._id}})">{{this.categoryTitle}}</option>
                              {{/each}} 
                            </select>

                            {{!-- <select class="form-select mb-3" aria-label="category" name="category" id="selectCat">
                              {{#each categories}}
                              <option value="{{this.categoryTitle}}">{{this.categoryTitle}}</option>
                              {{/each}} 
                            </select> --}}

                          </div>
                        </div>
                         
                        <div class="col-12 col-sm-6 col-xl-12">
                          <div class="mb-4">
                            <div class="d-flex flex-wrap justify-content-between mb-2">
                              <h5>Sub category</h5><a class="fw-bold fs--1" href="#!">Add new sub category</a>
                            </div><select class="form-select mb-3" aria-label="category" name="subCategory" id="subcategory">
                              {{#each subCategories}}
                              <option value="{{this.subCatTitle}}">{{this.subCatTitle}}</option>
                              {{/each}}
                            </select>
                            
                          </div>
                        </div> 

                         {{!-- <div class="col-12 col-sm-6 col-xl-12">
                          <div class="mb-4">
                            <div class="d-flex flex-wrap justify-content-between mb-2">
                              <h5>Sub category</h5><a class="fw-bold fs--1" href="#!">Add new sub category</a>
                            </div><select class="form-select mb-3" aria-label="category" name="subCategory">
                              {{#each subCategories}}
                              <option value="{{this.subCatTitle}}">{{this.subCatTitle}}</option>
                              {{/each}}
                            </select>
                          </div>
                        </div>  --}}


                        <div class="col-12 col-sm-6 col-xl-12">
                          <div class="mb-4">
                            <div class="d-flex flex-wrap justify-content-between mb-2">
                              <h5>Vendor</h5><a class="fw-bold fs--1" href="#!">Add new vendor</a>
                            </div><select class="form-select mb-3" aria-label="category" name="vendors">
                              {{#each vendors}}
                              <option value={{this.vendorName}}>{{this.vendorName}}</option>
                              {{/each}}
                            </select>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>

        </form>

      </div>
    </div>
  </main><!-- ===============================================-->
  <!--    End of Main Content-->
