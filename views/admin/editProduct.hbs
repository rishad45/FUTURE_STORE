<body>
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid px-0" data-layout="container">
            {{>admin-sidenav}}
            {{>admin-vertical-nav}}
            <div class="content">
        <nav class="mb-2" aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#!">Page 1</a></li>
            <li class="breadcrumb-item"><a href="#!">Page 2</a></li>
            <li class="breadcrumb-item active">Default</li>
          </ol>
        </nav>
        <!-- ============================================-->
        <!-- <section> begin ============================-->



        <!-- <section> begin ============================-->
        <section class="pt-5 pb-9">
            <div class="container-small cart">
                <h2 class="mb-5">Edit Product</h2>
                <div class="row">
                    <div class="col-lg-7">
                        {{!-- form starts here --}}
                        <form action="/admin/editProduct/{{data._id}}" method="post">
                            <div class="row g-4 mb-7">

                                <div class="col-12"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="inputName">Edit Product Name</label>
                                    <input class="form-control" id="inputName" type="text" value="{{data.productTitle}}"
                                        name="newName" required />
                                </div>

                                <div class="col-md-6"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="price">Price</label>
                                    <input class="form-control" id="price" type="number" value="{{data.price}}"
                                        name="price" required />
                                </div>

                                <div class="col-md-6"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="inputstock">Stock</label><input class="form-control" id="inputstock"
                                        type="number" name="stock" value="{{data.stock}}" required /> </div>

                                <div class="col-12"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="inputAddress1">Description</label>
                                    <textarea class="form-control" id="textAreaExample1" rows="4" name="description"
                                        required>{{data.description}}</textarea>
                                </div>


                                <div class="col-md-4"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="category">Category</label>

                                    <select class="form-select text-black" id="category" name="category" required>
                                        <option value="{{data.categoryId.categoryTitle}}" selected>
                                            {{data.categoryId.categoryTitle}}</option>

                                        {{#each categories}}

                                        <option value="{{this.categoryTitle}}">{{this.categoryTitle}}</option>

                                        {{/each}}
                                    </select>
                                </div>

                                <div class="col-md-4"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="subCategory">Sub Category</label><select class="form-select text-black"
                                        id="subCategory" required name="subCategory">
                                        <option value="{{data.subCatId.subCatTitle}}" selected>
                                            {{data.subCatId.subCatTitle}}</option>
                                        {{#each subCategories}}
                                        <option value="{{this.subCatTitle}}">{{this.subCatTitle}}</option>
                                        {{/each}}
                                    </select></div>
                                <div class="col-md-4"><label class="form-label fs-0 text-1000 ps-0 text-none"
                                        for="vendors">Vendor</label><select class="form-select text-black" id="vendors"
                                        required name="vendor">
                                        <option value="{{data.vendorId.vendorName}}" selected>
                                            {{data.vendorId.vendorName}}</option>
                                        {{#each vendors}}
                                        <option value="{{this.vendorName}}">{{this.vendorName}}</option>
                                        {{/each}}
                                    </select></div>

                                <div class="col-12"><button class="btn btn-primary px-8 px-sm-11 me-2"
                                        type="submit">Save</button><button class="btn btn-phoenix-secondary text-nowrap"
                                        type="submit">Exit Without Saving</button></div>
                            </div>
                            {{!-- form exiting here --}}

                        </form>


                    </div>


                    {{!-- <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="/img/products/{{data.coverImage}}" alt="Card image cap">
                        <div class="card-body">
                            <input type="file" name="cover" id="cover">
                        </div>
                    </div> --}}

                </div>

                {{!-- editing the cover image --}}
                {{!-- <form action="/admin/editCover" enctype="multipart/form-data" method="post">
                    <label for="files" class="btn text-success">Select a New Cover Image</label>
                    <input type="file" name="coverImage" id="cover">
                    <button class="btn btn-primary mt-4 " type="submit">Save Settings</button>

                </form> --}}


                <h3>Edit Cover Images</h3>

                <div class="card mb-5" style="width: 18rem;">
                    <div>
                        <img class="card-img-top" src="/img/products/{{data.coverImage}}" alt="Card image cap" id="coverImage">
                    </div>
                    <div class="card-body">
                        <div>
                            <form action="/admin/editCover/{{data._id}}" enctype="multipart/form-data" method="post">
                                <label for="cover" class="btn text-success"><a>Select a New Cover Image</a></label>
                                <input style="visibility:hidden;" type="file" name="coverImage" id="cover"
                                    accept="image/*" onchange="viewImage(event)"> 
                                <button class="btn btn-primary mt-4 " type="submit">Save Settings</button>
                            </form>
                        </div>


                    </div>
                </div>

                </form>

                {{!-- editing all product image --}}
                <h3>Edit All Images</h3>
                <div class="row mt-3">
                    {{#each data.allImages}}

                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="/img/products/{{this}}" alt="Card image cap">
                        <div class="card-body">
                            <div>
                                <label for="files" class="btn text-success">Select an Image</label>
                                <input id="files" style="visibility:hidden;" type="file">
                            </div>
                            <a href="" class="btn btn-primary mt-4">Save Settings</a>
                        </div>
                    </div>

                    {{/each}}
                </div>
            </div><!-- end of .container-->
        </section><!-- <section> close ============================-->
        <!-- ============================================-->



        <!-- ============================================-->
        <!-- <section> begin ============================-->



    </main><!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->



    <!-- ===============================================-->
    <!--    JavaScripts-->
    <script>
        function viewImage(event){
            document.getElementById('coverImage').src = URL.createObjectURL(event.target.files[0])
        }
    </script>
